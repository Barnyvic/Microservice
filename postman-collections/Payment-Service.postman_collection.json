{
  "info": {
    "name": "Payment Service API",
    "description": "Complete API collection for Payment Service microservice",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3003",
      "type": "string"
    },
    {
      "key": "transactionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "customerId",
      "value": "cust_001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Liveness Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/healthz",
              "host": ["{{baseUrl}}"],
              "path": ["healthz"]
            }
          },
          "response": []
        },
        {
          "name": "Readiness Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/readyz",
              "host": ["{{baseUrl}}"],
              "path": ["readyz"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment Processing",
      "item": [
        {
          "name": "Process Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.transactionId) {",
                  "        pm.collectionVariables.set('transactionId', response.data.transactionId);",
                  "    }",
                  "    if (response.data && response.data.orderId) {",
                  "        pm.collectionVariables.set('orderId', response.data.orderId);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customerId}}\",\n  \"orderId\": \"{{orderId}}\",\n  \"amount\": 199900\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "process"]
            }
          },
          "response": []
        },
        {
          "name": "Get Payment by Transaction ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/{{transactionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "{{transactionId}}"]
            }
          },
          "response": []
        },
        {
          "name": "List All Payments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Payments by Order",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/order/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "order", "{{orderId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get Payments by Customer",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/customer/{{customerId}}?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "customer", "{{customerId}}"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Filter Payments by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments?status=completed&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments"],
              "query": [
                {
                  "key": "status",
                  "value": "completed"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Message Queue",
      "item": [
        {
          "name": "Get Message Queue Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/queue/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "queue", "status"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Error Scenarios",
      "item": [
        {
          "name": "Process Payment - Invalid Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"nonexistent_customer\",\n  \"orderId\": \"{{orderId}}\",\n  \"amount\": 199900\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "process"]
            }
          },
          "response": []
        },
        {
          "name": "Process Payment - Invalid Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customerId}}\",\n  \"orderId\": \"nonexistent_order\",\n  \"amount\": 199900\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "process"]
            }
          },
          "response": []
        },
        {
          "name": "Process Payment - Invalid Amount",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customerId}}\",\n  \"orderId\": \"{{orderId}}\",\n  \"amount\": -100\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "process"]
            }
          },
          "response": []
        },
        {
          "name": "Get Payment - Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments/nonexistent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments", "nonexistent"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
