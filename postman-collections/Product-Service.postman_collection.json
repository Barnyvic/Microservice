        {
          "name": "Get Product - Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/products/nonexistent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "products", "nonexistent"]
            }
          },
          "response": []
        },
        {
          "name": "Reserve Stock - Insufficient Quantity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 999999\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/products/{{productId}}/reserve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "products", "{{productId}}", "reserve"]
            }
          },
          "response": []
