# Environment Configuration
NODE_ENV=development

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB_NAME=ecommerce
MONGODB_URI=mongodb://admin:password@localhost:27017/ecommerce?authSource=admin

# Message Broker Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password
RABBITMQ_URI=amqps://username:password@host.rmq.cloudamqp.com/vhost

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Service URLs
CUSTOMER_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_URL=http://localhost:3004

# Security (Generate secure values in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY=your-secure-api-key-change-in-production
